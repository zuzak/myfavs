extends skeleton
block content
  ul#links
    li
      a(href="history") history
    li
      a(href="progress") progress
  div.bars
    span.bar#history(title="local progress") type a word into the textbox ('apple')
    span.bar#globalhistory(title="global progress")
  div#favs
    span My favourite 
    input(type="textarea",autofocus,autocomplete="off",maxlength="77")#favbox 
    div#response
      span#is is
      span#favspace ...
      span#period &#46;
  div#verbosehistory
    span Click the progress bar to toggle between local (slash) and global (colon) progress
    span See ./history and ./progress for information that might help you on your quest
  div#warning
